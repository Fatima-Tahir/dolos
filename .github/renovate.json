{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 9am on wednesday"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "prPriority": -1
    },
    {
      "description": "Don't bump engines",
      "matchDepTypes": [ "engines" ],
      "enabled": false
    }
  ],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 8am on wednesday"
    ]
  },
  "timezone": "Europe/Brussels",
  "labels": ["dependencies"]
}
